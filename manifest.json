{
  "manifest_version": 3,
  "name": "PromptPilot",
  "version": "1.0",
  "description": "AI-powered prompt suggestions for ChatGPT",
  "permissions": [
    "background",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.openai.com/*",
    "https://your-heroku-app.herokuapp.com/*" // Replace with your Heroku app URL
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}